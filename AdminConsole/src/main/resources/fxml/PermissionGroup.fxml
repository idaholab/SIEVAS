<?import javafx.scene.control.Pagination?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>

<VBox id="AnchorPane" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gov.inl.SIEVAS.adminconsole.permissiongroup.PermissionGroupController">
   <children>
      
      <Pagination prefHeight="11.0" prefWidth="248.0" fx:id="pagination" >
          <fx:define>
              <Button fx:id="btnNew" prefHeight="30.0" prefWidth="75.0" mnemonicParsing="false" onAction="#onNewClick" text="New" textAlignment="CENTER"/>
              <TableView fx:id="tableView" minHeight="300.0" minWidth="500.0">
                <placeholder>
                    <Label text="No search results found."/>
                </placeholder>
                <columns>
                    <TableColumn id="id" fx:id="colID" prefWidth="75.0" text="ID">
                        <cellValueFactory>
                            <javafx.scene.control.cell.PropertyValueFactory property="id" /> 
                        </cellValueFactory>
                    </TableColumn>
                  <TableColumn id="groupName" fx:id="colGroupName" prefWidth="250.0" text="Name">
                      <cellValueFactory>
                          <javafx.scene.control.cell.PropertyValueFactory property="groupName" /> 
                      </cellValueFactory>
                  </TableColumn>
                </columns>
              </TableView>
          </fx:define>
      </Pagination>
   </children>
</VBox>
